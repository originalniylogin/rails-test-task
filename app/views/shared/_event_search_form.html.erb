<div class="well sidebar">
  <h3>Фильтр</h3>

  <%= form_tag events_path, method: 'get', class: 'form-horizontal' do %>
    <div class="form-group">
      <label class="col-md-4 control-label">
        Название
      </label>
      <div class="col-md-8">
        <%= text_field_tag :name, params[:name], class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-4 control-label">
        Место проведения
      </label>
      <div class="col-md-8">
        <%= text_field_tag :location, params[:location], class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-4 control-label">
        Организатор
      </label>
      <div class="col-md-8">
        <%= text_field_tag :event_handler, params[:event_handler], class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-4 control-label">
        Статус
      </label>
      <div class="col-md-8">
        <div class="radio">
          <%= label_tag :before_now do %>
            <%= radio_button_tag :status, 'before', params[:status] == 'before' %>
            Прошедшие
          <% end %>
        </div>
        <div class="radio">
          <%= label_tag :after_now do %>
            <%= radio_button_tag :status, 'after', params[:status] == 'after' %>
            Предстоящие
          <% end %>
        </div>
        <div class="radio">
          <%= label_tag :all do %>
            <%= radio_button_tag :status, 'all', params[:status] == 'all' %>
            Все
          <% end %>
        </div>
      </div>
    </div>

    <div class="form-group form-actions">
      <div class="col-md-9">
        <%= submit_tag 'Поиск', { name: nil, class: 'btn btn-sm btn-primary' } %>

        <%= link_to events_path do %>
          <button name="Сброс" type="reset" class="btn btn-sm btn-warning">Сброс</button>
        <% end %>
      </div>
    </div>
  <% end %>
</div><!--/.well -->