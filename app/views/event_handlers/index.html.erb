<%- model_class = EventHandler -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @event_handlers.each do |event_handler| %>
      <tr>
        <td><%= link_to event_handler.id, event_handler_path(event_handler) %></td>
        <td><%= event_handler.name %></td>
        <td><%= event_handler.description %></td>
        <td><%=l event_handler.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      event_handler_path(event_handler), :class => 'btn btn-default btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>