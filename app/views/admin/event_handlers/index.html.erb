<div class="page-header">
  <h1>Организаторы</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>Имя</th>
      <th>Описание</th>
      <th>Дата добавления</th>
      <th>Действия</th>
    </tr>
  </thead>

  <tbody>
    <% @event_handlers.each do |event_handler| %>
      <tr>
        <td><%= link_to event_handler.id, admin_event_handler_path(event_handler) %></td>
        <td><%= event_handler.name %></td>
        <td><%= event_handler.description %></td>
        <td><%=l event_handler.created_at %></td>
        <td>
          <%= link_to 'Просмотр', admin_event_handler_path(event_handler),
                      class: 'btn btn-default btn-xs' %>
          <%= link_to 'Редактировать', edit_admin_event_handler_path(event_handler),
                      class: 'btn btn-default btn-xs' %>
          <%= link_to 'Удалить', admin_event_handler_path(event_handler),
                      method: :delete,
                      data: { confirm: 'Вы уверены?' },
                      class: 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @event_handlers,
                  renderer: BootstrapPagination::Rails,
                  previous_label: 'Назад',
                  next_label: 'Далее'
%>

<%= link_to 'Создать',
            new_admin_event_handler_path,
            class: 'btn btn-primary' %>
