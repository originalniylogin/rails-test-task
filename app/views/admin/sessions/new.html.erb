<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: admin_login_path do |f| %>

      <%= f.label :login %>
      <%= f.text_field :login %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'fomr-control' %>

      <%= f.submit 'Log in', class: 'btn btn-primary' %>

    <% end %>
  </div>
</div>
